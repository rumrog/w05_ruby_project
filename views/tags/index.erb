<table class='tags-table'>

  <tbody>
    <% for tag in @tags %>
      <tr>
        <td><%= tag.name %></td>
        <td align='right'><a href='/tags/<%= tag.id %>/edit'>Edit</a></td>
      </tr>
    <% end %>
  </tbody>

  <tfoot class='foot-link'>
    <tr>
      <td colspan='2' align='center'><a href='/tags/new'>+</a></td>
    </tr>
  </tfoot>

</table>