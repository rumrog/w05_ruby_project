<div class='form'>
  <h2>New Transaction</h2>

  <form action='/transactions/<%= @transaction.id %>' method='POST'>
    <div class='inner-form'>
    <select name='tag_id' required>
      <option selected><%= @transaction.tag.name %></option>
      <% for tag in @tags %>
      <option value='<%= tag.id %>'><%= tag.name %></option>
      <% end %>
    </select>

    <select name='merchant_id' required>
      <option selected><%= @transaction.merchant.name %></option>
      <% for merchant in @merchants %>
      <option value='<%= merchant.id %>'><%= merchant.name %></option>
      <% end %>
    </select>

    <input id="date" type="date" name="date" value='<%= @transaction.date %>'required />

    <input id='amount' type='number' step='0.01' name='amount' placeholder='Â£0.00' value='<%= @transaction.amount %>'required />

    <input type='submit' value='Save' />
    </div>
  </form>
</div>